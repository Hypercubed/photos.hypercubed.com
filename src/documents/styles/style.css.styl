#set-carousel
	width 100%
	height 660px
	background #333
	text-align: center
	
.carousel-inner .item
	text-align center
	
.carousel-inner
	.item
		img
			display inline
			line-height 1
			max-width 100%
			max-height 100%
			min-height: 100%
			background:url(/loader.gif) no-repeat center center
		
.carousel-inner
	img.lazy
		min-height: 100%
		opacity 0.2
		background:url(/loader.gif) no-repeat center center
		

	
#set-indicators
	position: absolute
	z-index: 100
	left: 50%
	bottom 0
	padding-bottom 10px
	
.carousel-indicators
	position: relative
	left -50%
	top 0
	
